@require '../includes'

base-button()
  box-sizing: border-box;
  min-height: 2rem;
  min-width: 4rem;
  padding: 2px calc(1rem - 2px);

  border-radius: 0.25rem;
  border: 1px solid transparent;

  color: main-color
  background-color: transparent

  font-size: 1rem;
  text-transform: uppercase;

  &:hover
    background-color: rgba(main-color, 0.1);

  &:focus
    background-color: rgba(main-color, 0.4);
    outline: none;

flat-button()
  base-button()

outlined-button()
  base-button()
  border-color: #ccc;

contained-button()
  base-button()
  elevation(2)
  border-color: main-color;

  background-color: main-color;
  color: text-on-main-color;

  &:hover
    background-color: rgba(main-color, 0.9)
    elevation(4)

  &:focus
    background-color: rgba(main-color, 0.7)
    elevation(4)

  &:active
    elevation(8)

